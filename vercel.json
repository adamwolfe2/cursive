{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "rm -rf .next && pnpm run build",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "crons": [
    {
      "path": "/api/cron/reset-lead-counts",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/db-health",
      "schedule": "0 3 * * *"
    }
  ]
}
